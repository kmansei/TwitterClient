<div class="col-xs-4 sidebar container">
  <%= image_tag(@profile_banner, class: "img-responsive sidebar") if @profile_banner %>
  <%= form_tag(tweet_path, method: "post") do %>
    <%= text_field_tag :text %>
    <%= submit_tag("Tweet", class: "btn btn-primary") %>
  <% end %>
</div>
<div class="col-xs-8">
  <% @tweets.each do |tweet| %>
    <div class="post_panel well well-sm">
      <div class="profile_image">
        <%= link_to image_tag(tweet.user.profile_image_url_https) %>
      </div>
      <div class="post">
        <%= tweet.user.name %> @<%= tweet.user.id %><br />
        <%= tweet.text %><br />
        RT <%= tweet.retweet_count %> いいね <%= tweet.favorite_count %><br />
        <%= tweet.created_at %><br />
        <div class="post_image">
          <% if tweet.media? %>
            <% tweet.media.each do |media| %>
              <%= image_tag(media.media_url_https) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
